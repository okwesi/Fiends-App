<div class="container m-5 mx-auto bg-white shadow-lg rounded-lg overflow-hidden">
  <div class="p-4">
    <h2 class="text-2xl font-bold mb-2"><%= @friend.first_name %> <%= @friend.last_name %></h2>
    <p class="text-gray-600 mb-4"><strong>Email:</strong> <%= @friend.email %></p>
    <p class="text-gray-600 mb-4"><strong>Phone:</strong> <%= @friend.phone %></p>
    <p class="text-gray-600 mb-4"><strong>Twitter:</strong> <%= @friend.twitter %></p>
  </div>
  <div class="px-4 py-2 bg-gray-100">
    <%= link_to "Edit this friend", edit_friend_path(@friend), class: "text-blue-500 hover:text-blue-700 mr-2" %>
    <%= link_to "Back to friends", friends_path, class: "text-blue-500 hover:text-blue-700 mr-2" %>
    <%= button_to "Destroy this friend", @friend, method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:text-red-700" %>
  </div>
</div>
